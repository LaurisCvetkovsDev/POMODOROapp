{
  "homepage": "http://NOTpont1ff.github.io/pomodoro",
  "name": "pomodoro-app",
  "private": true,
  "version": "1.0.2",
  "description": "ultraPOMODORO365plus - A powerful productivity timer application using the Pomodoro Technique",
  "author": "ultraPOMODORO365plus Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "electron-builder",
    "electron-pack-publish": "npm run build && electron-builder --publish=always",
    "preelectron-pack": "npm run build",
    "start": "vite",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder --publish=always",
    "build-publish": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "@fontsource/share-tech-mono": "^5.1.1",
    "bootstrap": "^5.3.3",
    "boring-avatars": "^1.11.2",
    "date-fns": "^4.1.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-calendar-heatmap": "^1.10.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.1.5",
    "recharts": "^2.15.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@eslint/js": "^9.19.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.7",
    "@types/react": "^18.2.0",
    "@types/react-calendar-heatmap": "^1.9.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "gh-pages": "^6.3.0",
    "globals": "^15.14.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ultrapomodoro365plus.app",
    "productName": "ultraPOMODORO365plus",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "LaurisCvetkovsDev",
        "repo": "POMODOROapp",
        "private": false
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.ico",
      "publisherName": "ultraPOMODORO365plus Team"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "src/assets/icon.ico",
      "uninstallerIcon": "src/assets/icon.ico",
      "installerHeaderIcon": "src/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ultraPOMODORO365plus",
      "artifactName": "ultraPOMODORO365plus-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "warningsAsErrors": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/icon.png",
      "category": "Office"
    }
  }
}
